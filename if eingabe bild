using System;
using System.Diagnostics;

class Program
{
    static void Main(string[] args)
    {
        Console.WriteLine("Bitte geben Sie einen Wochentag ein:");
        string input = Console.ReadLine();
        if (input == "Montag")
        {
            // Öffnet ein Bild mit dem Standardprogramm
            Process.Start("bild.jpg");
        }
        else
        {
            Console.WriteLine("Kein Bild für diesen Tag.");
        }
    }
}
